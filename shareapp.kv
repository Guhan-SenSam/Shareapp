<MainScreen>:

    canvas:
        Color:
        Rectangle:
            texture:app.gradient
            size:self.size
            pos:self.pos
    FloatLayout:
        id:container
        size:self.size
        pos:self.pos
        BoxLayout:
            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.angle
                    axis: 0,0,1
                    origin: root.center
            canvas.after:
                PopMatrix
            pos_hint:{'center_x':1, 'center_y':.55}
            BackgroundCard:
                id:b_card
                size: '600dp','900dp'
                size_hint_x:None
                size_hint_y:None
                radius:20,20,20,20
                elevation:16
                md_bg_color: 3/255,128/255,108/255, 1
                FloatLayout:
                    size:self.size
                    pos:self.pos
